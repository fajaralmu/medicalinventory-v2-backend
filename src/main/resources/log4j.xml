<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration   
	debug="false"
    xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
        <param name="ConversionPattern" 
          value="%d{yyyy-MM-dd HH:mm:ss} thread: %t %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>
	<appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
	    <param name="append" value="false" />
	    <param name="file" value="./logs/application_log.log" />
	    <param name="Threshold" value="TRACE" />
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss} thread: %t %5p %c{1} - %m%n" />
	    </layout>
	</appender>
	<appender name="fileAppenderInfo" class="org.apache.log4j.RollingFileAppender">
	    <param name="append" value="false" />
	    <param name="file" value="./logs/application_log_info.log" />
	    <param name="Threshold" value="INFO" />
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss} thread: %t %5p %c{1} - %m%n" />
	    </layout>
	</appender>

    <root>
        <level value="INFO" />
        <appender-ref ref="console" />
        <appender-ref ref="fileAppender" />
        <appender-ref ref="fileAppenderInfo" />
    </root>

</log4j:configuration>